@model IEnumerable<NguyenManhHung_2122110438.Model.Category>

<h2>Danh sách danh mục</h2>
<a href="/Category/Create">+ Thêm danh mục</a>

<table>
    <thead>
        <tr>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="/Category/Edit/@item.Id">Sửa</a> |
                    <a href="/Category/Delete/@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
