@model NguyenManhHung_2122110438.Model.ProductCreateViewModel

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container mt-4">
    <h2 class="mb-4">✏️ Chỉnh sửa sản phẩm</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="id" value="@ViewBag.ProductId" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Nhập tên sản phẩm" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả (tùy chọn)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Danh mục</label>
            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control">
                <option value="">-- Chọn danh mục --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">🔙 Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
