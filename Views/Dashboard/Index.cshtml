@model NguyenManhHung_2122110438.Model.DashboardViewModel

@{
    Layout = null; // Hoặc: Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f9;
            padding: 30px;
            color: #333;
        }

        h1 {
            font-size: 36px;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        h2 {
            margin-top: 40px;
            font-size: 24px;
            border-left: 6px solid #3498db;
            padding-left: 10px;
            color: #34495e;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th, td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        ul {
            list-style: none;
            padding-left: 0;
        }

            ul li {
                padding: 10px;
                background-color: #ecf0f1;
                margin-bottom: 6px;
                border-radius: 4px;
            }

        img {
            border-radius: 6px;
            margin-bottom: 4px;
        }

        .section {
            margin-bottom: 40px;
        }

        .btn {
            display: inline-block;
            background-color: #3498db;
            color: white;
            padding: 10px 16px;
            border-radius: 4px;
            text-decoration: none;
            margin: 10px 0;
            font-weight: bold;
        }

            .btn:hover {
                background-color: #2980b9;
            }
    </style>
</head>
<body>
    <h1>Dashboard</h1>

    <div class="section">
        <h2>Products</h2>
        <a href="/Product/Create" class="btn">+ Thêm sản phẩm</a>

        @if (Model.Products != null && Model.Products.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Category?.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Không có sản phẩm nào.</p>
        }
    </div>

    <div class="section">
        <h2>Categories</h2>
        <a href="/Category/Create" class="btn">+ Thêm danh mục</a>

        @if (Model.Categories != null && Model.Categories.Any())
        {
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li><strong>@category.Name</strong> - @category.Description</li>
                }
            </ul>
        }
        else
        {
            <p>Không có danh mục nào.</p>
        }
    </div>

    <div class="section">
        <h2>Banners</h2>
        @if (Model.Banners != null && Model.Banners.Any())
        {
            <ul>
                @foreach (var banner in Model.Banners)
                {
                    <li>
                        <img src="@banner.ImageUrl" alt="Banner" width="150" />
                        <br />
                        <a href="@banner.Link" target="_blank">Visit link</a>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>Không có banner nào.</p>
        }
    </div>

    <div class="section">
        <h2>Users</h2>
        @if (Model.Users != null && Model.Users.Any())
        {
            <ul>
                @foreach (var user in Model.Users)
                {
                    <li><strong>@user.Username</strong> – @user.Email</li>
                }
            </ul>
        }
        else
        {
            <p>Không có người dùng nào.</p>
        }
    </div>
</body>
</html>
